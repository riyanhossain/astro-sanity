---
import { PortableText } from "astro-portabletext";

const { title, subTitle, content, button } = Astro.props;
---

<section class="py-12 px-4 max-w-5xl mx-auto">
  {title && <h2 class="text-3xl font-bold mb-4 text-gray-900">{title}</h2>}

  {
    subTitle && (
      <h3 class="text-xl font-medium mb-6 text-gray-700">{subTitle}</h3>
    )
  }

  {
    content && (
      <div class="prose max-w-none text-gray-700">
        <PortableText value={content} />
      </div>
    )
  }

  {
    button && (
      <div class="mt-8">
        <a
          href={button.url}
          class="inline-block px-6 py-3 rounded-md bg-primary text-white font-medium hover:bg-primary-dark transition-colors"
          target={button.isExternal ? "_blank" : "_self"}
          rel={button.isExternal ? "noopener noreferrer" : ""}
        >
          {button.label}
        </a>
      </div>
    )
  }
</section>
